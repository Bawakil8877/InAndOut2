@model IEnumerable<InAndOut2.Models.expense>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">My Expenses</h1>
        </div>

        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">Create New Expense</a>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Amount)
          
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseName)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseType.Name)

            </th>
            <th>Changes</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseName)
         
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpenseType.Name)

                </td>
           
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Update</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
